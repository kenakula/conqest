extends ../base/layout.pug

block data
  include ../data/placeholder.pug
  include ../data/main-nav.data.pug
  include ../data/header.data.pug

block variables
  -
    const title = 'ProjectName — Главная'
    const hasHeader = true
    const hasFooter = true
    const currentPage = 'main'

block append head
  <link rel="apple-touch-icon" sizes="76x76" href="/favicons/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest" crossorigin='use-credentials'>
  <link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#5bbad5">
  <meta name="msapplication-TileColor" content="#da532c">
  <meta name="theme-color" content="#ffffff">
  link(rel='preload', href='fonts/Playfairdisplay-regular.woff2', as='font', crossorigin='anonymous')

block nav
  +main-nav(mainNav)

block main
  main

block modals
